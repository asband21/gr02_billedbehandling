#include <stdio.h>
#include <opencv2/opencv.hpp>

using namespace cv;

void keren(Mat img,Mat ker, Mat ud)
{
	int x = img.size[0];
	printf("x:%d",x);
}

int main(int argc, char** argv )
{
    if ( argc != 3 )
    {
        printf("program <biled sti> <2. biled sti>\n");
        return -1;
    }
    Mat image, ker, ud;
    image = imread( argv[1], 1 );
    ud = imread( argv[1], 1 );
    ker = imread( argv[2], 1 );
    if ( !image.data )
    {
        printf("No image data \n");
        return -1;
    }
    if ( !ker.data )
    {
        printf("No image data \n");
        return -1;
    }
    namedWindow("Display Image", WINDOW_AUTOSIZE );
    imshow("Image", image);
    imshow("keren", ker);
    imshow("ud", ud);
	keren(image,ker,ud);


    waitKey(0);
    return 0;
}
